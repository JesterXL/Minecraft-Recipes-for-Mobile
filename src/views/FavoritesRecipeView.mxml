<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Favorites">
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var favorites:ArrayCollection;
			
			private function onItemClick(event:Event):void
			{
				if(favoritesList.selectedItem)
					navigator.pushView(RecipeView, favoritesList.selectedItem);
			}
			
			
		]]>
	</fx:Script>
	
	<s:navigationContent>
		<s:Button label="&lt;&lt; Back" click="navigator.popView()" />
	</s:navigationContent>
	
	<s:List id="favoritesList" dataProvider="{favorites}" width="100%" height="100%" click="onItemClick(event)">
		<s:itemRenderer>
			<fx:Component>
				<s:IconItemRenderer 
					label="{data.title}"
					decorator="{data.images[0].image}"
					iconScaleMode="letterbox"
					>
					<fx:Script>
						<![CDATA[
							import com.jxl.minecraftrecipes.vo.IngredientVO;
						]]>
					</fx:Script>
				</s:IconItemRenderer>
				
			</fx:Component>
		</s:itemRenderer>
	</s:List>
	
</s:View>
