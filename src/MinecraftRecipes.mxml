<?xml version="1.0" encoding="utf-8"?>
<s:ViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
							xmlns:s="library://ns.adobe.com/flex/spark" 
							firstView="views.MinecraftRecipesHomeView" 
							applicationDPI="320" 
							xmlns:rl="com.jxl.minecraftrecipes.rl.*"
							initialize="init()"
							addedToStage="onAdded()">
	<fx:Declarations>
		<rl:MainContext contextView="{this}" />
	</fx:Declarations>
	
	<!-- TODO: show last 4 favorites -->
	
	<fx:Script>
		<![CDATA[
			import com.jxl.minecraftrecipes.vo.IngredientVO;
			import com.jxl.minecraftrecipes.vo.RecipeVO;
			
			import flash.net.registerClassAlias;
			
			private function init():void
			{
				registerClassAlias("com.jxl.minecraftrecipes.vo.IngredientVO", IngredientVO);
				registerClassAlias("com.jxl.minecraftrecipes.vo.RecipeVO", RecipeVO);
			}
			
			private function onAdded():void
			{
				this.loaderInfo.uncaughtErrorEvents.addEventListener(UncaughtErrorEvent.UNCAUGHT_ERROR, onGlobalError);
			}
			
			private function onGlobalError(event:UncaughtErrorEvent):void
			{
				trace("Error: " + event);
			}
		]]>
	</fx:Script>
	
	
</s:ViewNavigatorApplication>
